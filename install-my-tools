#!/bin/bash

export BASE_DIR="$HOME/bin"
source ${BASE_DIR}/starter/functions.sh

function _install_my_tools(){
	create-dirs

	install-platform-package
	install-go-packages
	install-python-packages

	create-links

	# start new era...
	source $HOME/.zshrc

	echo "Installation done!"
}

_install_my_tools