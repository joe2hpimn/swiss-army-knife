#!/bin/bash

# 获取当前脚本所在目录
BASE_DIR=$(cd `dirname $0`; pwd)
source ${BASE_DIR}/global.sh

function _install_my_tools(){
	create-dirs

	install-platform-package
	install-go-packages
	install-python-packages

	create-links

	# start new era...
	source $HOME/.zshrc

	echo "Installation done!"
}

_install_my_tools